# Ambiente
NODE_ENV=development
PORT=3000

# Banco de dados
DATABASE_URL="postgresql://usuario:senha@localhost:5432/onlywave"

# JWT
JWT_SECRET="sua_chave_super_secreta"
JWT_EXPIRES_IN="1d"

# Rate Limiting
RATE_LIMIT_WINDOW=900000  # 15 minutos em milissegundos
RATE_LIMIT_MAX=100        # Máximo de requisições por janela

# Configurações de Email (para recuperação de senha)
SMTP_HOST=smtp.exemplo.com
SMTP_PORT=587
SMTP_USER=seu_email@exemplo.com
SMTP_PASS=sua_senha
SMTP_FROM=noreply@onlywave.com

# Configurações de Upload (opcional)
UPLOAD_PROVIDER=local     # local ou s3
S3_BUCKET=seu-bucket
S3_REGION=sua-regiao
AWS_ACCESS_KEY_ID=sua-key
AWS_SECRET_ACCESS_KEY=seu-secret

# Configurações de Cache (opcional)
REDIS_URL=redis://localhost:6379 
# Ambiente (development, production, test)
NODE_ENV=development
PORT=3000

# Banco de dados
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=onlywave
DATABASE_URL="postgresql://user:password@localhost:5432/onlywave?schema=public"
DATABASE_URL_TEST="postgresql://user:password@localhost:5432/test_database_name"

# JWT
JWT_SECRET=your_secret_key
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN="7d"
REFRESH_TOKEN_SECRET="your_refresh_token_secret_key"
REFRESH_TOKEN_EXPIRES_IN="7d"

# Frontend
FRONTEND_URL="http://localhost:5173"

# Rate Limiting
RATE_LIMIT_WINDOW="15"
RATE_LIMIT_MAX_REQUESTS="100"

# Configurações de Email (para recuperação de senha)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-password
SMTP_FROM=noreply@onlywave.com.br

# Configurações de Upload (opcional)
UPLOAD_PROVIDER=local     # local ou s3
S3_BUCKET=seu-bucket
S3_REGION=sua-regiao
AWS_ACCESS_KEY_ID=sua-key
AWS_SECRET_ACCESS_KEY=seu-secret

# Configurações de Cache (opcional)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_USERNAME=""
REDIS_TLS=""
REDIS_MAX_RETRIES="3"
REDIS_RETRY_DELAY="1000"
REDIS_DB=0
REDIS_TTL=3600

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Compressão
COMPRESSION_LEVEL=6

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Password Salt Rounds
PASSWORD_SALT_ROUNDS="10"

# Mercado Pago
MERCADO_PAGO_ACCESS_TOKEN=your-access-token
MERCADO_PAGO_PUBLIC_KEY=your-public-key
MERCADO_PAGO_WEBHOOK_SECRET=your_webhook_secret

# Logtail (opcional)
LOGTAIL_API_KEY=your-api-key

# Métricas
METRICS_ENABLED=true
METRICS_PORT=9090

# Alertas
SLACK_WEBHOOK_URL=your-webhook-url

# Segurança
ALLOWED_ORIGINS=http://localhost:3000
JWT_EXPIRATION=1h

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Cache
CACHE_TTL=3600
CACHE_MAX=100

# Sentry
SENTRY_DSN=

# Swagger
SWAGGER_TITLE=API de Pagamentos
SWAGGER_DESCRIPTION=API para processamento de pagamentos
SWAGGER_VERSION=1.0
SWAGGER_TAG=payments
SWAGGER_PATH=api

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=payment_service 
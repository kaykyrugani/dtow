{
  "name": "onlywave-backend",
  "version": "1.0.0",
  "description": "Backend da loja de roupas OnlyWave",
  "main": "src/server.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "npm run test:setup && vitest run",
    "test:watch": "npm run test:setup && vitest",
    "test:setup": "tsx scripts/setup-test-db.ts",
    "test:int": "npm run test:setup && vitest run --config vitest.integration.config.ts",
    "test:int:watch": "npm run test:setup && vitest --config vitest.integration.config.ts",
    "test:ui": "npm run test:setup && vitest --ui",
    "test:coverage": "npm run test:setup && vitest run --coverage",
    "prisma:migrate": "prisma migrate dev",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
